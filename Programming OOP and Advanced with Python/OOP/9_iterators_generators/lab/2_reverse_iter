class reverse_iter:
    def __init__(self, l):
        self.l = l
        self.next_value = -1

    def __iter__(self):
        return self

    def __next__(self):
        if self.next_value > -len(self.l):
            raise StopIteration

        value_to_return = self.l[self.next_value]
        self.next_value -= 1
        return value_to_return


reversed_list = reverse_iter([1, 2, 3, 4])
for item in reversed_list:
    print(item)
